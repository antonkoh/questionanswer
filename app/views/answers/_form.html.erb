<div class='answer-errors'>
  <ul>
    <% answer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
  </ul>
</div>

<%= form_for (answer.new_record? ? [question, answer] : answer ), remote: true do |f| %>
    <%= f.label :body, 'Your answer:' %>
    <%= f.text_field :body %>
    <%= f.submit (answer.new_record? ? "Post answer" : "Save") %>
<% end %>


