<h1><%= @question.title %></h1>
<p><%= @question.body %></p>

<h2>Answers</h2>
<div class="answers">
  <%= render @question.answers %>
</div>


<%= render 'answers/form', question: @question, answer: @answer %>


<% if user_signed_in? && current_user.can_edit?(@question) %>
<h3>Actions:</h3>
    <ul>
      <li><%= link_to 'Delete', @question, method: :delete %></li>
      <li><%= link_to 'Edit', edit_question_path(@question) %></li>
    </ul>
<% end %>