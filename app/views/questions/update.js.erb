$('.question-errors').empty();

<% @question.errors.full_messages.each do |message| %>
$('.question-errors').append('<%= j message %>');
<% end %>

<% if !@signed_in %>
$('.question-errors').append('<%= j I18n.t('devise.failure.unauthenticated') %>')
<% elsif !@has_rights %>
$('.question-errors').append('<%= j 'You don\'t have rights to perform this action.' %>');
<% elsif @question.errors.empty? %>
$('.read_question_section#content').html("<h1><%= @question.title %></h1><p><%= @question.body %></p>");
questionReadMode();
<% end %>
